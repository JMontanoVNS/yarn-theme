{{ 'custom-image-multicolumn.css' | asset_url | stylesheet_tag }}

<div style="background-color: {{ section.settings.background_color }}" class="main-container shopify-section">
  <ul class="image-list">
    {% for block in section.blocks %}
      {% if block.settings.image == blank %}
        <h1>Select a image</h1>
      {% else %}
        <div class="image">
          {{ block.settings.image | image_url: width: block.settings.image_width | image_tag: loading: 'lazy' }}
        </div>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% schema %}
  {
    "name": "Images multicolumn",
    "class": "section",
    "tag": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#F7F1D5",
        "label": "Background color"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.multicolumn.blocks.column.settings.image.label"
          }, {
            "type": "number",
            "id": "image_width",
            "label": "Image width"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Images multicolumn"
      }
    ]
  }
{% endschema %}